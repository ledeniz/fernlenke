<?xml version='1.0' encoding='utf-8'?>
<widget id="de.ozealis.swipeswitch" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SwipeSwitch</name>
    <description>
        Mobile friendly stateless on/off switches for HTTP APIs
    </description>
    <author email="code@ledeniz.de" href="http://ledeniz.de">
        Deniz Erdogan
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
